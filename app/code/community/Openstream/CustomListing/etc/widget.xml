<?xml version="1.0"?>
<widgets>
    <custom_listing_all type="custom_listing/all" translate="name description">
        <name>All Products</name>
        <description>Adds the listing of all enabled products of the current store.</description>
        <is_email_compatible>1</is_email_compatible>
        <parameters>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <value>catalog/product/list.phtml</value>
                <values>
                    <default translate="label">
                        <value>catalog/product/list.phtml</value>
                        <label>Catalog Product List Template</label>
                    </default>
                </values>
            </template>
            <show_toolbar>
                <label>Show Toolbar</label>
                <visible>1</visible>
                <type>select</type>
                <value>1</value>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_toolbar>
            <list_mode>
                <label>List Mode</label>
                <visible>1</visible>
                <type>select</type>
                <value>1</value>
                <source_model>custom_listing/widget_source_listMode</source_model>
            </list_mode>
            <column_count>
                <label>Grid Column Count</label>
                <visible>1</visible>
                <type>text</type>
                <value>1</value>
                <depends>
                    <list_mode>
                        <values>
                            <empty/>
                            <grid>grid</grid>
                            <grid_list>grid-list</grid_list>
                            <list_grid>list-grid</list_grid>
                        </values>
                    </list_mode>
                </depends>
                <description>Leave empty for default</description>
            </column_count>
            <limit>
                <label>Product Limit</label>
                <visible>1</visible>
                <type>text</type>
                <value>1</value>
                <depends>
                    <show_toolbar>
                        <value>0</value>
                    </show_toolbar>
                </depends>
                <description>Leave empty for all products</description>
            </limit>
        </parameters>
    </custom_listing_all>
